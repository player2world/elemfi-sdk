{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib"
  },
  "exclude": ["./lib", "./node_modules"]
}
